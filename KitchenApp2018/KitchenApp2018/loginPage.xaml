<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KitchenApp2018.loginPage"
             BackgroundColor="#660000">

    <!--login page-->
   
    <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand">
            <!--enter username-->
            <Label Text="Username" TextColor="Yellow"  />
            <Entry x:Name="usernameEntry" Placeholder="username" Keyboard="Email" />
            <!--enter Password-->
            <Label Text="Password" TextColor="Yellow" />
            <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />
            <!--login here-->
            <Button Text="Login" TextColor="Yellow" Clicked="OnLoginButtonClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>